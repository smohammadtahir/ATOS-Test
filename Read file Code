import os
import pandas as pd
from numpy.lib.shape_base import split
df = pd.DataFrame(columns = ['Source IP', 'Enviroment'])

dict = {}
path  = "/content/sample_data/Engineering Test Files"
for file in os.listdir(path):
  if file.endswith('.csv') or file.endswith('.CSV'):
    read_file = pd.read_csv(path + '/' + file,  usecols = ["Source IP"] , dtype = str)
    fileName = file.split()[0] + ' '+  file.split()[1].replace('.csv', '')
    for i in read_file:
      dict['Source IP'] = read_file[i]
      dict['Enviroment'] = fileName
    df = df.append(pd.DataFrame.from_dict(dict), ignore_index= True)
    #print(read_file)
    
print(df)
